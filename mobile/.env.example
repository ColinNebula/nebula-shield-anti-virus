# Mobile App Environment Configuration
# Copy this file to .env and configure with your own values

# =======================
# API ENDPOINTS
# =======================
# Cloud backend API
API_URL=http://localhost:3001
WS_URL=ws://localhost:3001

# Desktop backend (if direct connection)
DESKTOP_API_URL=http://192.168.1.100:8080

# =======================
# AUTHENTICATION
# =======================
# JWT token storage key (don't change unless necessary)
JWT_STORAGE_KEY=nebula_shield_token

# =======================
# PUSH NOTIFICATIONS
# =======================
# Firebase Cloud Messaging
FCM_SENDER_ID=

# OneSignal (alternative)
ONESIGNAL_APP_ID=

# =======================
# FEATURES
# =======================
# Enable/disable features
ENABLE_BIOMETRIC_AUTH=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_BACKGROUND_SYNC=true

# =======================
# DEVELOPMENT
# =======================
# Development mode settings
DEV_MODE=true
MOCK_API=false

# Enable debug logging
DEBUG=true

# =======================
# PRODUCTION SETTINGS
# =======================
# Uncomment for production deployment
# API_URL=https://cloud.yourdomain.com
# WS_URL=wss://cloud.yourdomain.com
# DEV_MODE=false
# DEBUG=false
