{
  "appId": "com.nebulashield.antivirus",
  "productName": "Nebula Shield Anti-Virus",
  "copyright": "Copyright Â© 2025 ColinNebula",
  "directories": {
    "buildResources": "build-resources",
    "output": "dist"
  },
  "files": [
    "build/**/*",
    "!build/**/*.map",
    "public/electron.js",
    "public/preload.js",
    "public/favicon.ico",
    "public/icon.png",
    "node_modules/electron-is-dev/**/*",
    "package.json"
  ],
  "asarUnpack": [
    "build/**/*"
  ],
  "extraResources": [
    {
      "from": "backend",
      "to": "backend",
      "filter": ["**/*", "!node_modules/**/*"]
    },
    {
      "from": "backend/node_modules",
      "to": "backend/node_modules",
      "filter": ["**/*"]
    },
    {
      "from": "data",
      "to": "data",
      "filter": ["**/*"]
    }
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "icon": "build-resources/icon.png",
    "verifyUpdateCodeSignature": false,
    "signAndEditExecutable": false,
    "forceCodeSigning": false
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Nebula Shield Anti-Virus",
    "license": "LICENSE"
  },
  "mac": {
    "target": ["dmg", "zip"],
    "icon": "build-resources/icon.icns",
    "category": "public.app-category.utilities"
  },
  "linux": {
    "target": ["AppImage", "deb"],
    "icon": "build-resources/icon.png",
    "category": "Utility"
  },
  "publish": null
}
