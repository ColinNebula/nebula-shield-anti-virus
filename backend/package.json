{
  "name": "backend",
  "version": "1.0.0",
  "description": "A high-performance C++ backend for the Nebula Shield Anti-Virus application, providing comprehensive malware detection, real-time protection, and HTTP API services for the React frontend.",
  "main": "index.js",
  "directories": {
    "example": "examples",
    "lib": "lib"
  },
  "scripts": {
    "start": "node auth-server.js",
    "start:scanner": "node real-scanner-api.js",
    "start:protection": "node integrated-protection-service.js",
    "start:all": "concurrently \"npm run start\" \"npm run start:scanner\" \"npm run start:protection\"",
    "dev": "nodemon auth-server.js",
    "dev:scanner": "nodemon real-scanner-api.js",
    "dev:protection": "nodemon integrated-protection-service.js",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:scanner\" \"npm run dev:protection\"",
    "build:scanner": "node-gyp configure build",
    "rebuild:scanner": "node-gyp rebuild",
    "clean:scanner": "node-gyp clean",
    "install:protection": "npm install chokidar",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:av": "node scripts/smoke-av-status.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@paypal/checkout-server-sdk": "^1.0.3",
    "axios": "^1.12.2",
    "bcryptjs": "^3.0.2",
    "chokidar": "^4.0.3",
    "concurrently": "^9.2.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "fast-glob": "^3.3.3",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-addon-api": "^8.0.0",
    "node-disk-info": "^1.3.0",
    "nodemailer": "^7.0.9",
    "nodemon": "^3.1.10",
    "socket.io": "^4.8.1",
    "sqlite3": "^5.1.7",
    "stripe": "^19.1.0",
    "systeminformation": "^5.27.11",
    "validator": "^13.15.23"
  },
  "devDependencies": {
    "node-gyp": "^10.0.1"
  }
}
