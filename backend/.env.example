# Authentication
JWT_SECRET=nebula-shield-secret-key-change-in-production
AUTH_PORT=8082

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# PayPal Configuration
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_MODE=sandbox
# Use 'sandbox' for testing, 'live' for production

# Email Configuration (Gmail example)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=Nebula Shield <noreply@nebulashield.com>

# Application Settings
APP_URL=http://localhost:3000
PREMIUM_PRICE_USD=49.00
PREMIUM_PRICE_YEARLY=49.00

# Cloud Threat Intelligence APIs (Optional but recommended for better protection)
# Get free API keys from:
# - VirusTotal: https://www.virustotal.com/gui/join-us
# - AbuseIPDB: https://www.abuseipdb.com/register
# - URLScan: https://urlscan.io/
VIRUSTOTAL_API_KEY=
ABUSEIPDB_API_KEY=
URLSCAN_API_KEY=
HYBRID_ANALYSIS_API_KEY=

# Enhanced Security Settings
# JWT Configuration
JWT_SECRET=your-super-secure-random-secret-min-32-chars-CHANGE-IN-PRODUCTION
JWT_REFRESH_SECRET=another-super-secure-random-secret-min-32-chars-CHANGE-IN-PRODUCTION
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
JWT_EXPIRES_IN=24h

# Encryption
API_ENCRYPTION_ENABLED=false
API_ENCRYPTION_KEY=

# Security
BCRYPT_ROUNDS=12
NODE_ENV=development

# Database Paths
AUDIT_DB_PATH=./backend/data/security_audit.db
