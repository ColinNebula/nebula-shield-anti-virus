# =======================
# NEBULA SHIELD ANTI-VIRUS
# Environment Variables
# =======================

# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# Server Configuration
PORT=8080
NODE_ENV=development

# CORS Configuration
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# VirusTotal API (Optional - for production use)
# Get your API key from: https://www.virustotal.com/gui/my-apikey
REACT_APP_VIRUSTOTAL_API_KEY=your_virustotal_api_key_here

# File Upload Configuration
MAX_FILE_SIZE=104857600
UPLOAD_DIR=uploads/

# Rate Limiting (requests per window)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SCAN_RATE_LIMIT_WINDOW_MS=300000
SCAN_RATE_LIMIT_MAX_REQUESTS=20

# Security Headers
HSTS_MAX_AGE=31536000
CSP_ENABLED=true

# Database (if using real database in future)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=nebula_shield
# DB_USER=admin
# DB_PASSWORD=your_secure_password_here

# Session Secret (if implementing authentication)
# SESSION_SECRET=your_random_secret_key_here

# Logging
LOG_LEVEL=info
LOG_FILE=logs/nebula-shield.log
